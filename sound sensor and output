int sound_sensor = A2; //assign to pin A2
 
void setup() 
{
  Serial.begin(9600); 
}
 
void loop()
{
  int soundValue = 0; 
  for (int i = 0; i < 32; i++) //create a for loop to read 
  { soundValue += analogRead(sound_sensor);  } //read the sound sensor
 
  soundValue >>= 5; //bitshift operation 
 
 

  if (soundValue > 500) { 
    Serial.println(" Please be Quiet. ");
  }
  else if (soundValue < 500) {
    Serial.println(" Quiet enough, Thank you.");
  }

  delay(500); //a shorter delay between readings
}
